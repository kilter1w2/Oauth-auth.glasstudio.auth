rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read or write their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // API Credentials:
    // - Users can create credentials for themselves.
    // - Users can only read, update, or delete their own credentials.
    match /api_credentials/{credentialId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // OAuth sessions are managed server-side and should not be client-accessible.
    match /oauth_sessions/{sessionId} {
      allow read, write: if false;
    }

    // Usage stats can be read by any authenticated user but only written by the server.
    match /usage_stats/{statsId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Security logs are not client-accessible.
    match /security_logs/{logId} {
      allow read, write: if false;
    }
  }
}
